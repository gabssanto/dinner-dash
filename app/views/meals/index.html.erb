<h1 class="title_edit">dinnerdash</h1>
<%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'active logout_edit'  %>
<h1 class="user_edit">Backoffice</h1>
<h2 class="subtitle">Gerencie pedidos, refeicoes e mais.</h2>

<body class="fundobackoffice">
  <div class ="log3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
      <div class="leftmarginnavbar">
        <div class="navbar-nav">
          <%= link_to 'Pedidos', "/orders", class:"nav-item nav-link  " %>
          <%= link_to 'Usuários', "/users", class:"nav-item nav-link " %>
          <%= link_to 'Refeições', "/meals", class:"nav-item nav-link active " %>
          <%= link_to 'Categorias de Refeição', "/meal_categories", class:"nav-item nav-link " %>
        </div>
      </div>
      </div>
        </nav>
        <div class="tablecss">
        <div class="form-row col">
          <% @meals.each do |meal| %>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <img src="/images/Macarrão.jpg", class="card-img-top">
              <div class="card-header bg-dark text-white">
                <%=meal.name%>
              </div>
                <h7 class="card-text text-secondary"><%= meal.description %></h7>
                <br>
                <h5 class="card-text text-success">R$ <%= meal.price%>,00 por porção</h5>              
              </div>
              <div class="card-body">  
                  <%= link_to 'Editar', edit_meal_path(meal), class:"btn btn-warning text-white btn-sm buttonSize" %>
                  <%= link_to 'Excluir', meal, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger text-white buttonSize btn-sm" %>
              </div>
            </div>
          <% end %>
        </div>
        </div>
        <br>

        <%= link_to 'New Meal', new_meal_path, class:"btn btn-success intro4 text-white"%>
    </div>
</body>
