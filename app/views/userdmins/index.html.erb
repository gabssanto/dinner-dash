<h1 class="title_edit">dinnerdash</h1>
<%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'active logout_edit'  %>
<%= link_to "Home", root_path, :class => 'active logout_edit botaoback2 text-white'  %>
<h1 class="user_edit">Backoffice</h1>
<h2 class="subtitle">Gerencie pedidos, refeicoes e mais.</h2>

<body class="fundobackoffice">
    <div class ="log2">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
          <div class="leftmarginnavbar">
              <div class="navbar-nav">
                  <%= link_to 'Pedidos', "/orders", class:"nav-item nav-link" %>
                  <%= link_to 'Usuários', "/userdmins", class:"nav-item nav-link active" %>
                  <%= link_to 'Refeições', "/meals", class:"nav-item nav-link " %>
                  <%= link_to 'Categorias de Refeição', "/meal_categories", class:"nav-item nav-link" %>
              </div>
          </div>
          </div>
      </nav>
      <div class = "tablecss">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th colspan="2"scope="col">Nome</th>
            <th scope="col">Email</th>
            <th colspan="4"scope="col">Cadastrado em</th>
          </tr>
        </thead>

              <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.admin %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%d/%m/%y") %></td>
                <td><%= link_to "edit", edit_userdmin_path(user), class:"text-warning font2" %></td>
                <td><%= link_to 'Apagar', userdmin_path(user), 
                          method: :delete, data: { confirm: "Tem certeza?" } , class:"text-danger font2"   %> </td>
                
              </tr>
          <%end%>
        </tbody>    
      </table>  
  </div>
  <br>
</body>