<%= form_with(model: meal_category, local: true) do |form| %>
  <% if meal_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal_category.errors.count, "error") %> prohibited this meal_category from being saved:</h2>

      <ul>
      <% meal_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "tablecss">
    <h4>Editar categoria de refeição</h4>

    <div class="form-row">
        <div class="col">
            <%= form.label :nome, class: "font" %>
            <%= form.text_field :name,  class: "form-control " %>
        </div>
        <div class="col">
            <%= form.label :cadastrado_em, class: "font" %>
            <%= form.text_field :created_at, value: @meal_category.created_at.strftime("%d/%m/%Y"),  class: "form-control disabled", disabled: true %>
        </div>   
    </div>
    <div class="topmargin form-row">
        <%= form.submit "atualizar categoria de refeição", class:"btn btn-success intro5 active"  %>
        <%= link_to 'voltar', meal_categories_path, class:"leftmarginvoltar btn btn-secondary active" %>
    </div>
  </div>
<% end %>